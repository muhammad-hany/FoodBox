<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/splash"
        android:name="com.ertreby.foodbox.fragments.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splash_to_signUp"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_splash_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splash_to_verifiedFragment"
            app:destination="@id/verifiedFragment" />
    </fragment>
    <fragment
        android:id="@+id/verificationFragment"
        android:name="com.ertreby.foodbox.fragments.EnterPhoneFragment"
        android:label="VerificationFragment" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.ertreby.foodbox.fragments.SignUpFragment"
        android:label="SignUpFragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ertreby.foodbox.fragments.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/verifiedFragment"
        android:name="com.ertreby.foodbox.fragments.VerifiedFragment"
        android:label="VerifiedFragment" />
</navigation>