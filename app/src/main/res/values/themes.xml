<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->s
    <style name="Theme.FoodBox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->


        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/accent_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/sansation</item>
        <item name="fontFamily">@font/sansation</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="buttonTint">@color/color_primary</item>
        <item name="materialButtonStyle">@style/Button.Submit</item>

        <!-- Customize your theme here. -->
    </style>



    <style name="Theme.FoodBox.Lite" parent="Theme.MaterialComponents.Light">
        <item name="android:statusBarColor">@color/text_color_light</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/sansation</item>
        <item name="android:fontFamily">@font/sansation</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="TextAppearance.Body.Lite" parent="TextAppearance.Body">
        <item name="android:textColor">@color/text_color_light</item>

    </style>

    <style name="TextAppearance.Subtitle" parent="TextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Button.Submit" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">19sp</item>
        <item name="android:padding">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">15dp</item>

    </style>











</resources>